        "type": "object",
        "properties": {
          "preferenceCurrency": {
            "type": "string"
          },
          "weeklyReports": {
            "type": "boolean"
          },
          "alertsOnEmail": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "UserAssetDto": {
