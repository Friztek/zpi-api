          "totalValue": {
            "type": "number",
            "format": "double"
          },
          "currencyTotalValue": {
            "type": "number",
            "format": "double"
          },
          "cryptoTotalValue": {
            "type": "number",
            "format": "double"
          },
          "metalTotalValue": {
            "type": "number",
            "format": "double"
          }
