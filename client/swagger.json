        "type": "object",
        "properties": {
          "asset": {
            "$ref": "#/components/schemas/AssetDto"
          },
          "originValue": {
            "type": "number",
            "format": "double"
          },
          "userCurrencyValue": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
